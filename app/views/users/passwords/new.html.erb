<div class="d-flex justify-content-center align-item-center">
  <div class="col-md-6 bg-white rounded-lg p-3">
    <h2 class="text-center">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control rounded-pill" %>
      </div>

      <div class="form-group">
        <%= f.submit "Send me reset password instructions", class:"btn btn-warning btn-block rounded-pill" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>

  </div>
</div>